---
import BaseLayout from "../layouts/BaseLayout.astro";
import { ROUTES } from "../constants";
import { SITE_CONFIG } from "../config/site";

const title = "404 - Page Not Found";
const description = "The page you're looking for doesn't exist.";
---

<BaseLayout title={title} description={description}>
  <div
    class="max-w-3xl mx-auto px-6 py-20 text-center"
  >
    <h1
      class="text-6xl md:text-8xl font-bold text-gray-900 dark:text-gray-100 mb-4"
    >
      404
    </h1>
    <p class="text-2xl md:text-3xl text-gray-600 dark:text-gray-400 mb-8">
      Page not found
    </p>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-12 max-w-md mx-auto">
      The page you're looking for doesn't exist or has been moved.
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a
        href={ROUTES.home}
        class="px-6 py-3 bg-blue-600 dark:bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors"
      >
        Go to Home
      </a>
      <a
        href={ROUTES.blog}
        class="px-6 py-3 border border-gray-300 dark:border-gray-600 text-gray-900 dark:text-gray-100 font-medium rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors"
      >
        View Blog
      </a>
    </div>

    <div class="mt-16 pt-12 border-t border-gray-200 dark:border-gray-700">
      <p class="text-gray-600 dark:text-gray-400">
        Looking for something specific? Check out the{" "}
        <a
          href={ROUTES.home}
          class="text-blue-600 dark:text-blue-400 hover:underline"
        >
          {SITE_CONFIG.name}
        </a>{" "}
        project or subscribe to our newsletter for updates.
      </p>
    </div>
  </div>
</BaseLayout>

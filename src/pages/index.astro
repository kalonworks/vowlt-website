---
import BaseLayout from "../layouts/BaseLayout.astro";
import ButtondownForm from "../components/SubscribeForm.astro";
import { SITE_CONFIG } from "../config/site";
import { ROUTES } from "../constants";
---

<BaseLayout title={SITE_CONFIG.title} description={SITE_CONFIG.description}>
  <main
    class="min-h-screen flex flex-col items-center justify-center px-6 py-12 bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-gray-800"
  >
    <div class="max-w-4xl w-full text-center space-y-12">
      <!-- Hero Section -->
      <div class="space-y-6">
        <h1 class="text-6xl md:text-7xl font-extrabold tracking-tight">
          <span
            class="bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400 bg-clip-text text-transparent"
          >
            {SITE_CONFIG.name}
          </span>
        </h1>

        <p
          class="text-2xl md:text-3xl text-gray-800 dark:text-gray-200 font-medium max-w-3xl mx-auto leading-relaxed"
        >
          Your personal search engine built from your bookmarks
        </p>

        <p
          class="text-lg md:text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto leading-relaxed"
        >
          Open source bookmarking with AI-powered categorization and semantic
          search.
          <span class="font-semibold text-gray-700 dark:text-gray-300"
            >Never lose a bookmark again.</span
          >
        </p>
      </div>

      <!-- Email Capture Section -->
      <div
        class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-8 md:p-12 border border-gray-100 dark:border-gray-700"
      >
        <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-6">Get early access</h2>
        <div class="flex justify-center">
          <ButtondownForm tag="homepage" />
        </div>
      </div>

      <!-- Blog CTA -->
      <div class="pt-8 border-t border-gray-200 dark:border-gray-700">
        <a
          href={ROUTES.blog}
          class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-semibold text-lg transition-colors group"
        >
          Read our blog
          <svg
            class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
        <p class="text-gray-500 dark:text-gray-400 mt-3">Follow along as we build in public</p>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="text-center py-8 px-6 border-t border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900">
    <p class="text-gray-600 dark:text-gray-400">
      Built by <a
        href={SITE_CONFIG.author.url}
        class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-medium hover:underline transition-colors"
        >{SITE_CONFIG.author.name}</a
      >
      <span class="mx-2">â€¢</span>
      <span class="font-medium">Open source</span> ({SITE_CONFIG.license})
    </p>
  </footer>
</BaseLayout>

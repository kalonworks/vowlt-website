---
import BaseLayout from "./BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { formatDate } from "../utils/date";

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  tags?: string[];
}

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  tags = [],
} = Astro.props;

const formattedDate = formatDate(pubDate);
const formattedUpdatedDate = updatedDate ? formatDate(updatedDate) : undefined;
---

<BaseLayout
  title={`${title} | vowlt blog`}
  description={description}
  image={heroImage}
  type="article"
  publishedTime={pubDate.toISOString()}
>
  <Header />

    <!-- Article -->
    <main class="max-w-3xl mx-auto px-6 py-12">
      <article>
        <!-- Meta -->
        <div class="mb-8">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-gray-100 mb-4">
            {title}
          </h1>
          <div class="text-gray-600 dark:text-gray-400 space-y-2">
            <p>
              <time datetime={pubDate.toISOString()}>{formattedDate}</time>
              {
                updatedDate && (
                  <span>
                    {" "}
                    • Updated:{" "}
                    <time datetime={updatedDate.toISOString()}>
                      {formattedUpdatedDate}
                    </time>
                  </span>
                )
              }
            </p>
            {
              tags.length > 0 && (
                <div class="flex gap-2 flex-wrap">
                  {tags.map((tag) => (
                    <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full text-sm">
                      {tag}
                    </span>
                  ))}
                </div>
              )
            }
          </div>
        </div>

        {
          heroImage && (
            <img src={heroImage} alt={title} class="w-full rounded-lg mb-8" />
          )
        }

        <!-- Content -->
        <div
          class="prose prose-lg max-w-none dark:prose-invert prose-headings:font-bold prose-headings:tracking-tight prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-a:no-underline hover:prose-a:underline prose-a:font-medium"
        >
          <slot />
        </div>
      </article>

      <!-- Back to blog -->
      <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
        <a href="/blog" class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-medium">
          ← Back to blog
        </a>
      </div>
    </main>

  <Footer />
</BaseLayout>
